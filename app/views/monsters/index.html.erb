<h1>All Monsters</h1>

<table>
    <tr>
        <th>Name</th>
        <th>CR</th>
        <th colspan="3"></th>
    </tr>
    
    <% @monsters.each do |monster| %>
        <tr>
            <td><%= monster.name %></td>
            <td><%= monster.cr %></td>
            <td><%= link_to 'Show', monsters_path(monster) %></td>
            <td><%= link_to 'Edit', edit_monster_path(monster) %></td>
            <td><%= link_to 'Delete', monsters_path(monster),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>

