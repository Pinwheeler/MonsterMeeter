<div class="container">
<div class="content-block all-monsters">
    <h1>All Monsters</h1>
    <div class="link-block">
        <%= link_to 'Main', welcome_index_path %> |
        <%= link_to 'Add Monster', new_monster_path %>
    </div>
    
<div class="scrollable table-container">
<table>
    <tr>
        <th>Name</th>
        <th>CR</th>
        <th colspan="3"></th>
    </tr>
    
    <% @monsters.each do |monster| %>
        <tr>
            <td><%= monster.name %></td>
            <td><%= monster.cr %></td>
            <td><%= link_to 'Show', monster_path(monster) %></td>
            <td><%= link_to 'Edit', edit_monster_path(monster) %></td>
            <td><%= link_to 'Delete', monster_path(monster),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>
</div>
</div>
</div>